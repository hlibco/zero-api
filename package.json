{
  "name": "api-zero",
  "version": "1.0.0",
  "description": "A Basic Typescript REST API",
  "author": "Felipe Hlibco",
  "license": "MIT",
  "main": "./dist/index.js",
  "scripts": {
    "START________________________________________________________________": "",
    "start": "nodemon",
    "start:serve": "nodemon --ignore ./",
    "start:debug": "nodemon --config nodemon-debug.json",
    "TESTS________________________________________________________________": "",
    "test": "jest --detectOpenHandles --passWithNoTests",
    "test:cov": "jest --coverage --maxWorkers=1 --forceExit --detectOpenHandles --passWithNoTests",
    "test:watch": "jest --watch --maxWorkers=1 --detectOpenHandles --passWithNoTests",
    "test:debug": "node --inspect-brk -r ts-node/register node_modules/.bin/jest --runInBand --maxWorkers=1",
    "QUALITY______________________________________________________________": "",
    "format": "prettier --write 'src/**/*.{ts,json}'",
    "build": "rm -rf dist && tsc -p tsconfig.build.json",
    "lint": "eslint --fix './src/**/*.ts'",
    "DOCKER_______________________________________________________________": "",
    "docker:build": "docker build -t sample/api-zero . && docker images",
    "docker:run": "docker run -p 3010:8080 -d sample/api-zero && docker ps"
  },
  "dependencies": {
    "dotenv": "8.2.0"
  },
  "devDependencies": {
    "@types/jest": "26.0.20",
    "@types/node": "14.14.22",
    "@typescript-eslint/eslint-plugin": "4.14.1",
    "@typescript-eslint/parser": "4.14.1",
    "eslint": "7.18.0",
    "eslint-config-prettier": "7.2.0",
    "eslint-plugin-prettier": "3.3.1",
    "husky": "4.3.8",
    "jest": "26.6.3",
    "lint-staged": "10.5.3",
    "nodemon": "2.0.7",
    "prettier": "2.2.1",
    "ts-jest": "26.4.4",
    "ts-node": "9.1.1",
    "typescript": "4.1.3"
  }
}
